<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/complaint_image"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/complaint_image"
        android:textColor="#193744"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/complaint_image" />

    <TextView
        android:id="@+id/sub_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complaint"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/complaint_image"
        android:textColor="#4E4E4E"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/complaint_image" />

    <TextView
        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sub_complaint"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/complaint_image"
        android:textColor="#1F520A"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/complaint_image" />

    <TextView
        android:id="@+id/dateofcomplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/complaint_image"
        android:textColor="#5D1969"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/complaint_image" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="6dp"
        android:textColor="#1F520A"
        android:textSize="12sp"
        android:layout_toEndOf="@+id/complaint_image"
        android:layout_toRightOf="@+id/complaint_image"
        android:text="" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/complaint_image"
        android:layout_alignLeft="@+id/complaint_image"
        android:layout_alignTop="@+id/complaint_image"
        android:layout_alignEnd="@+id/complaint_image"
        android:layout_alignRight="@+id/complaint_image"
        android:layout_alignBottom="@+id/complaint_image"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp" />

</RelativeLayout>