<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <Button
        android:id="@+id/delete_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DELETE THIS MESSAGE"
        android:textColor="#193744"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/copy_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COPY THIS MESSAGE"
        android:layout_marginTop="20dp"
        android:textColor="#193744"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delete_message" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:text=""
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/copy_message" />


</androidx.constraintlayout.widget.ConstraintLayout>